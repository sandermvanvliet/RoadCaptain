<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RoadCaptain.App.RouteBuilder.ViewModels"
        xmlns:sharedViewModels="clr-namespace:RoadCaptain.App.Shared.ViewModels;assembly=RoadCaptain.App.Shared"
        mc:Ignorable="d"
        Width="1024"
        Height="800"
        x:Class="RoadCaptain.App.RouteBuilder.Views.ManageRoutes"
        Title="Manage Routes"
        Icon="avares://RoadCaptain.App.Shared/icon.png"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        CanResize="False"
        SystemDecorations="None"
        WindowStartupLocation="CenterOwner"
        Activated="WindowBase_OnActivated"
        PointerPressed="InputElement_OnPointerPressed"
        x:DataType="viewModels:ManageRoutesViewModel">
    <Design.DataContext>
        <viewModels:DesignTimeManageRoutesViewModel />
    </Design.DataContext>
	<Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="8" Opacity="1" Background="White">
		<Grid Margin="4">
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<!-- banner -->
				<RowDefinition Height="*" />
				<!-- main content-->
				<RowDefinition Height="40" />
				<!-- bottom button row -->
			</Grid.RowDefinitions>

			<StackPanel Orientation="Horizontal" Grid.Row="0">
				<Image Source="avares://RoadCaptain.App.Shared/icon.png" Height="24" VerticalAlignment="Center" Margin="4,0,4,0" />
				<TextBlock Text="{Binding Path=Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" FontWeight="ExtraBold" FontSize="24" VerticalAlignment="Center" Margin="0,1,0,0" />
			</StackPanel>
			<Button Content="X" Background="Red" Foreground="White" Grid.Row="0" HorizontalAlignment="Right" Width="40" Height="20" Margin="0,-3,-3,0" VerticalAlignment="Top"
                    Click="CloseButton_Click" FontSize="14">
				<Button.Styles>
					<Style Selector="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Name="borderZero" Background="{TemplateBinding Background}" CornerRadius="0,8,0,0">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</Button.Styles>
			</Button>

			<Grid Grid.Row="1" ZIndex="2" Margin="8,32,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="120" />
					<ColumnDefinition />
					<ColumnDefinition Width="84" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="32" />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Grid.Styles>
					<Style Selector="TextBox">
						<Setter Property="Margin" Value="0,0,0,8"/>
						<Setter Property="TextWrapping" Value="NoWrap" />
					</Style>
					<Style Selector="TextBlock.field">
						<Setter Property="VerticalAlignment" Value="Top" />
						<Setter Property="HorizontalAlignment" Value="Right"/>
						<Setter Property="Margin" Value="0,6,4,0"/>
					</Style>
				</Grid.Styles>

                <TextBlock Text="Route repository:" Grid.Row="0" Grid.Column="0" Classes="field" />
				<ComboBox Name="RepositoryComboBox" VerticalAlignment="Center"
				          Items="{Binding Path=Repositories}"
				          SelectedItem="{Binding Path=SelectedRepository}"
				          PointerPressed="RoutesListBox_OnPointerPressed"
				          HorizontalAlignment="Stretch"
				          Grid.Row="0" Grid.Column="1"/>
                
                
            <ListBox Name="RoutesListBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                     ZIndex="50"
                     HorizontalAlignment="Stretch"
                     Padding="0"
                     Margin="4"
                     Items="{Binding Path=Routes}"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     VerticalAlignment="Stretch"
                     Background="White">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="8,0,8,0" />
                    </Style>
                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                        <Setter Property="Background" Value="{StaticResource ZwiftOrange}" />
                        <Setter Property="TextBlock.Foreground" Value="White" />
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="sharedViewModels:RouteViewModel">
                        <Grid Margin="0,0,0,4">
                            <Grid.Resources>
                                <Style Selector="TextBlock" x:Key="ListBoxItemStyle">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="18" />
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="2" Background="White" CornerRadius="5" Margin="5,8,5,5"
                                    ToolTip.Tip="{Binding Path=WorldName}">
                                <TextBlock Text="{Binding Path=WorldAbbreviation}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                            
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Name}" HorizontalAlignment="Left" FontSize="20"
                                       Margin="0,4,0,0" />

                            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal" Height="18">
                                    <TextBlock Text="{Binding Path=Distance,StringFormat=\{0:0\}}" FontSize="16"
                                               FontWeight="Bold" VerticalAlignment="Bottom" />
                                    <TextBlock Text="km" FontSize="10" FontWeight="Bold" VerticalAlignment="Bottom"
                                               Padding="0,0,0,1.5" />

                                    <TextBlock Text="â›°" FontSize="15" Margin="8,-4,0,0" Padding="0"
                                               FontWeight="ExtraBold"
                                               ToolTip.Tip="{Binding Path=Descent,StringFormat=Descent \{0:0\}m}"/>
                                    <TextBlock Text="{Binding Path=Ascent,StringFormat=\{0:0\}}" FontSize="16"
                                               FontWeight="Bold" VerticalAlignment="Bottom" />
                                    <TextBlock Text="m" FontSize="10" FontWeight="Bold" VerticalAlignment="Bottom"
                                               Padding="0,0,0,1.5" />
                                    
                                    <TextBlock Text="â†»" FontWeight="Bold" Foreground="Green" FontSize="18" IsVisible="{Binding Path=IsLoop}" Margin="4,-2,0,0"
                                               ToolTip.Tip="This route is a loop"/>
                                    
                                    <TextBlock Text="ðŸš´ðŸ¾" FontSize="18" Margin="8,-6,0,0" ToolTip.Tip="Created by" />
                                    <TextBlock Text="{Binding Path=CreatorName}" ToolTip.Tip="Created by" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="ðŸŒ" VerticalAlignment="Center" />
                                <TextBlock
                                Text="{Binding Path=RepositoryName}"
                                VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="2" Content="ðŸ—‘" FontSize="16" Margin="8,0,0,0" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center"
                                    ToolTip.Tip="Delete this route"
                                    Cursor="Hand"
                                    Command="{Binding $parent[Window].((viewModels:ManageRoutesViewModel)DataContext).DeleteRouteCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
			</Grid>

			<!-- Bottom row -->
			<Button
                Grid.Row="2"
                Content="Close" HorizontalAlignment="Right" Margin="2,4,4,2" VerticalAlignment="Center"
                Click="CloseButton_Click" />
		</Grid>
	</Border>
</Window>

